@page
@model TechnoKala.Pages.Auth.LoginModel

<section class="contact-area pt-80 pb-50">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="contact-form">
                    <h4 class="title">ورود به حساب کاربری</h4>
                    <p>لطفاً اطلاعات خود را وارد کنید.</p>
                    <form id="login-form"  method="POST">
                        <div class="form-grp">
                            <input type="email" asp-for="email" placeholder="پست الکترونیک*" required />
<span asp-validation-for="email"></span>
                        </div>
                        <div class="form-grp">
                            <input type="password" asp-for="password" placeholder="رمز عبور*" required />
                            <span asp-validation-for="password"></span>
                        </div>
                        <button type="submit" class="btn btn-two">ورود</button>
                    </form>
                    <p class="ajax-response mb-0"></p>
                    <p class="mt-3">حساب کاربری ندارید؟ <a asp-page="Register" id="show-register">ثبت‌نام کنید</a></p>
                </div>
            </div>
        </div>
    </div>
</section>